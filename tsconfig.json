{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],

    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,

    "allowJs": false,
    "esModuleInterop": true,

    "sourceMap": true
  },
  "include": ["./**/*.ts", "./**/*.d.ts"]
}
